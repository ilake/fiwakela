<% content_for :page_specific do %>
  <%= stylesheet_link_tag 'jquery-datepicker.custom.css' %>
<% end %>

<% content_for :js_rdy do %>
  <%= javascript_include_tag 'datepicker/jquery-datepicker.min.js' %>
  <%= datepicker_css %>

  <script type='text/javascript'>
    $jq(function() {
      $jq("#startDate").datepicker({dateFormat: 'yy-mm-dd' });
      $jq("#endDate").datepicker({dateFormat: 'yy-mm-dd' });
    });
  </script>
<% end %>
<% form_tag user_records_path(:user_id => user.id), :method => :get do %>
  <%= submit_tag t('record.trange'), :class => 'submit' %>
  <%= text_field_tag :startDate, startDate, :size => 15 %>
  <%= text_field_tag :endDate, endDate, :size => 15 %> 
<% end %>
