<h2><%= t'record.edit_record'%></h2>

<div id='form'>
<% remote_form_for(@record) do |f| %>
  <%= f.hidden_field :status %>
  <p>
    <%= t'record.time'%><br />
    <%= f.datetime_select :time, :use_month_numbers => true, :end_year => Time.zone.now.year , :include_seconds => true %>
  </p>
  <p>
    <%= t'record.content' %><br />
    <%= f.text_area :content, :rows => '5', :cols => '36' %>
  </p>
  <p>
    <%= t'record.pri' %><br />
    <%= f.check_box :pri %>
  </p><br />
  <p>
    <%= f.submit t('record.update'), :class => 'submit' %>
  </p>
<% end %>
</div>
