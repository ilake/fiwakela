<h1>Editing record</h1>

<% remote_form_for(@record) do |f| %>
  <%= f.hidden_field :status %>
  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time, :use_month_numbers => true, :end_year => Time.now.year , :include_seconds => true %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => '15', :cols => '36' %>
  </p>
  <p>
    <%= f.label :pri %><br />
    <%= f.check_box :pri %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
