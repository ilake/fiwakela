<h2>Editing record</h2>

<div id='form'>
<% remote_form_for(@record) do |f| %>
  <%= f.hidden_field :status %>
  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time, :use_month_numbers => true, :end_year => Time.zone.now.year , :include_seconds => true %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => '15', :cols => '36' %>
  </p>
  <p>
    <%= f.label 'private(only be seen by yourself)' %><br />
    <%= f.check_box :pri %>
  </p><br />
  <p>
    <%= f.submit 'Update', :class => 'submit' %>
  </p>
<% end %>
</div>
