<h2>Creaing <%= @realtime ? 'Realtime' : 'Manual' %> Record</h2>

<div id='form'>
  <% remote_form_for(@record) do |f| %>
    <%= f.hidden_field :status %>
    <p>
      <%= f.label :time %><br />
      <% 
        if @realtime 
          concat @record.time.to_s(:fulltime) 
          concat f.hidden_field :time 
        else
          concat f.datetime_select :time, :use_month_numbers => true, :end_year => Time.now.year , :include_seconds => true
        end
      %>
    </p>
    <p>
      <%= f.label :content %><br />
      <%= f.text_area :content, :rows => '5', :cols => '36', :class => 'text' %>
    </p>
    <p>
      <%= f.label 'private(only be seen by yourself)' %><br />
      <%= f.check_box :pri %>
    </p><br />
    <p>
      <%= f.submit 'Create', :class => 'submit' %>
    </p>
  <% end %>
</div>
