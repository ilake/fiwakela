<h2 class='title'><%= t'user.editsetting'%></h2>

<div id='form'>
<% form_for(@user) do |f| %>
  <p>
    <%= t'user.timezone' %><br />
    <%= f.time_zone_select :timezone, nil%>
  </p>
  <p>
    <%= t'user.target' %><br />
    <%= select_hour @user.target_time || Time.now %>:
    <%= select_minute @user.target_time || Time.now %>
  </p><br />
  <p>
    <%= f.submit t('record.update'), :class => 'submit' %>
  </p>
<% end %>
</div>
